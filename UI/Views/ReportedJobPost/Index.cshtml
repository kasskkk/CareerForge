@model IEnumerable<Domain.ReportedPost.ReportedJobPost>

<div class="container mt-4">
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <h1 class="text-info">No offers has been reported</h1>
            </div>   
        }

        @foreach (var report in Model)
        {
            <div class="col-md-4 mt-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@report.Name</h5>
                        <p class="card-text">@report.Description</p>
                        <p class="card-text">Job Post ID: @report.JobPostId</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>